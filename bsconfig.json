{
  "name": "nut-taal",
  "suffix": ".mjs",
  "jsx": { "version": 4, "mode": "classic" },
  "bsc-flags": [
    "-bs-super-errors",
    "-bs-no-version-header"
  ],
  "sources": [
    { "dir": "src", "subdirs": true },
    { "dir": "__tests__", "subdirs": true, "type": "dev" }
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "bs-dependencies": [
    "@rescript/react",
    "@ryyppy/rescript-promise",
    "bs-fetch",
    "rescript-webapi",
    "rescript-url",
    "@glennsl/bs-json"
  ],
  "bs-dev-dependencies": [
    "@dzakh/rescript-ava"
  ]
}
