    "marked": "^4.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rescript": "^10.1.0",
    "rescript-url": "^0.1.3",
    "rescript-webapi": "^0.7.0"
  },
  "devDependencies": {
    "@dzakh/rescript-ava": "^2.1.0",
    "@jihchi/vite-plugin-rescript": "^5.0.0",
    "@vitejs/plugin-react": "^3.0.0",
    "ava": "5.1.x",
    "prettier": "^2.8.1",
    "vite": "^4.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
